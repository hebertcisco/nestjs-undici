{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "outDir": "./lib",
    "rootDir": "source",
    "skipLibCheck": true
  },
  "include": ["source/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "__tests__", "coverage"]
}